# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.ts text eol=lf
*.js text eol=lf
*.json text eol=lf
*.ak text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Scripts
*.sh text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary

# Plutus artifacts
*.plutus binary
plutus.json binary

# Large files that should use Git LFS (if enabled)
*.plutus filter=lfs diff=lfs merge=lfs -text
whole-utxo.json filter=lfs diff=lfs merge=lfs -text

# Language-specific settings
*.aiken linguist-language=Aiken
*.ak linguist-language=Aiken

# Export-ignore (don't include in release archives)
.gitattributes export-ignore
.gitignore export-ignore
.github export-ignore
node_modules export-ignore
.git export-ignore

